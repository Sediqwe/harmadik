
<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user, local: true)  do |f| %>
<div class="container">
    <div class="shadow rounded p-3 mb-5 bg-info ">
        <div class="form-group row">
            <div class="col-2">
            <%= f.label :User_név %>
            </div>
            <div class="col-10"><%= f.text_field :username, class:"form-control" %>
            </div>
        </div>


         <div class="form-group row">
            <div class="col-2">
            <%= f.label :Email %>
            </div>
            <div class="col-10"><%= f.text_field :email, class:"form-control" %>
            </div>
        </div>
         <div class="form-group row">
            <div class="col-2">
            <%= f.label :Password%>
            </div>
            <div class="col-10"><%= f.text_field :password, class:"form-control",placeholder: "Válassz jelszót" %>
            </div>
        </div>
        <div class="row justify-content-center">
            <%= f.submit(@user.new_record? ? "Regisztrálás" : "Módosítás",  class:"btn btn-primary") %>
        </div>
    </div>
</div>
<% end %>
<div class="justify-content-center row">
<% if @user.new_record?  %>

<% else %>
<%= link_to "[ Vissza a főmenübe ]" , users_path %>
<% end %>
</div>
