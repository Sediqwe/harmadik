

<%= form_with do |f| %>
<div class="container">
    <div class="shadow rounded p-3 mb-5 bg-info ">
         <div class="form-group row">
            <div class="col-2">
            <%= f.label :Email %>
            </div>
            <div class="col-10"><%= f.text_field :email, class:"form-control" %>
            </div>
        </div>
         <div class="form-group row">
            <div class="col-2">
            <%= f.label :Password%>
            </div>
            <div class="col-10"><%= f.text_field :password, class:"form-control",placeholder: "Add meg a jelszót" %>
            </div>
        </div>
        <div class="row justify-content-center">
            <%= f.submit "Belépés",  class:"m-3 btn btn-primary"%><%%>
        </div>
    </div>
</div>
<% end %>
<div class="justify-content-center row">
<%= link_to "[ Vissza a főmenübe ]" , articles_path %>
</div>
