
<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, local: true)  do |f| %>
<div class="container">
    <div class="shadow rounded p-3 mb-5 bg-info ">
        <div class="form-group row">
            <div class="col-2">
            <%= f.label :Cím%>
            </div>
            <div class="col-10"><%= f.text_field :title, class:"form-control rounded shadow" %>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2"><%= f.label :Tartalom %>
            </div>
            <div class="col-10">
            <%= f.text_area :description, rows:10, class:"form-control rounded shadow" %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2"><%= f.label :category, "Kategória" %>
            </div>
            <div class="col-10">
             <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Válassz pár kategóriát(Üresen is hagyhatod)"}, { multiple: true, size:3, class: "custom-select rounded shadow"}) %>
            </div>
        </div>


        <div class="row justify-content-center">
            <%= f.submit  class:"btn btn-primary"%>
        </div>
    </div>
</div>
<% end %>
<div class="justify-content-center row">
<%= link_to "[ Vissza a főmenübe ]" , articles_path %>
</div>
