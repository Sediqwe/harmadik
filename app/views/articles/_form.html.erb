
<% if @article.errors.any? %>
<h2>A következő hibákat észleltük:</h2>
    <% @article.errors.full_messages.each do |f| %>

<li class="bg-danger m-2-sm"> <%= f %></li>

    <% end %>

<% end %>

<%= form_with(model: @article, local: true)  do |f| %>
<div class="container">
    <div class="shadow rounded p-3 mb-5 bg-info ">
        <div class="form-group row">
            <div class="col-2">
            <%= f.label :Cím%>
            </div>
            <div class="col-10"><%= f.text_field :title, class:"form-control" %>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2"><%= f.label :Tartalom %>
            </div>
            <div class="col-10">
            <%= f.text_area :description, rows:10, class:"form-control" %>
            </div>
        </div>
        <div class="row justify-content-center">
            <%= f.submit  class:"btn btn-primary"%>
        </div>
    </div>
</div>
<% end %>
<div class="justify-content-center row">
<%= link_to "[ Vissza a főmenübe ]" , articles_path %>
</div>
