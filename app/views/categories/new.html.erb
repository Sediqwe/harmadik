<h1 class="text-center">Új kategória felvétele</h1>


<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, local: true)  do |f| %>
<div class="container">
    <div class="shadow rounded p-3 mb-5 bg-info ">
        <div class="form-group row">
            <div class="col-2">
            <%= f.label :name, "Kategória név" %>
            </div>
            <div class="col-10"><%= f.text_field :name, class:"form-control" %>
            </div>
        </div>

        <div class="row justify-content-center">
            <%= f.submit class:"btn btn-primary" %>
        </div>
    </div>
</div>
<% end %>
<div class="justify-content-center row">
<%= link_to "[ Vissza a főmenübe ]" , articles_path %>
</div>
